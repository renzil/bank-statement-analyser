{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "parser",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/parser/parser.py",
            "console": "integratedTerminal",
            "python": "${workspaceRoot}/parser/.venv/bin/python",
            "cwd": "${workspaceRoot}/parser",
            "justMyCode": true,
        },
        {
            "name": "server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/server/src/index.js",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/server",
        },
        {
            "name": "web-app",
            "command": "npm run dev -- --open",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceRoot}/web-app",
        }
    ]
}